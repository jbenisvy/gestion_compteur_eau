{% extends 'base.html.twig' %}

{% block title %}Mes relevés{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Mes relevés de compteurs</h1>
    <p class="text-muted">Page réservée aux utilisateurs (copropriétaires).</p>

    <div class="table-wrap">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Compteur</th>
                    <th scope="col">Index relevé</th>
                    <th scope="col">Photo</th>
                </tr>
            </thead>
            <tbody>
                {% for releve in releves %}
                    <tr>
                        <td>{{ releve.date|date('d/m/Y') }}</td>
                        <td>{{ releve.compteur }}</td>
                        <td>{{ releve.index }}</td>
                        <td>
                            {% if releve.photo %}
                                <img src="{{ asset('uploads/' ~ releve.photo) }}"
                                     alt="Photo compteur"
                                     class="img-thumbnail"
                                     style="max-height:60px;">
                            {% else %}
                                <span class="text-muted">Aucune photo</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun relevé disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
