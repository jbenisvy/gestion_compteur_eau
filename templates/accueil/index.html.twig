{% endblock %}

{% block body %}
<div class="login-container">
    <h1>üîê Connexion √† l‚Äôespace Copropri√©taire</h1>

    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="email">Identifiant :</label>
            <input type="text" id="email" name="email" value="{{ last_username }}" required autofocus>
