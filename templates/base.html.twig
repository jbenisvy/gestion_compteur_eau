{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {# ✅ Un seul bloc stylesheets #}
    {% block stylesheets %}
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
      >
      <link href="{{ asset('css/app.css') }}?v=20260220-1625" rel="stylesheet">
    {% endblock %}

    {# ✅ Un seul bloc javascripts, avec importmap si tu l’utilises #}
    {% block javascripts %}
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
        defer
      ></script>
      {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
  </head>
  <body>
    <div class="app-shell">
      <header class="topbar navbar navbar-light">
        <div class="brand">
          <span class="brand-mark">Eau</span>
          <span class="brand-sub">Gestion Copropriété</span>
        </div>
        <button
          id="mobileMenuButton"
          class="navbar-toggler mobile-menu-btn"
          type="button"
          aria-controls="mobileMenuPanel"
          aria-expanded="false"
          aria-label="Basculer la navigation"
        >
          <span class="hamburger-glyph" aria-hidden="true">☰</span>
          <span class="hamburger-label">Menu</span>
        </button>

        <nav class="topnav desktop-nav">
          <button type="button" class="print-btn" onclick="window.print()">Imprimer les états</button>
          <a href="{{ path('guides_index') }}">Didacticiels</a>
          <a href="{{ path('home') }}">Accueil</a>
          {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('admin_dashboard') }}">Admin</a>
              <a href="{{ path('admin_compteurs_reference') }}">Réf. compteurs</a>
              <a href="{{ path('admin_historique') }}">Historique global</a>
            {% else %}
              <a href="{{ path('copro_dashboard') }}">Mes lots</a>
              <a href="{{ path('copro_historique') }}">Historique</a>
            {% endif %}
            <a href="{{ path('app_account_email') }}">Mon compte</a>
            <a class="cta" href="{{ path('app_logout') }}">Déconnexion</a>
          {% else %}
            <a class="cta" href="{{ path('app_login') }}">Connexion</a>
          {% endif %}
        </nav>
      </header>
      <div id="mobileMenuOverlay" class="mobile-menu-overlay" hidden></div>
      <aside id="mobileMenuPanel" class="mobile-menu-panel" hidden>
        <div class="mobile-menu-head">
          <strong>Menu</strong>
          <button id="mobileMenuClose" type="button" class="mobile-menu-close" aria-label="Fermer">✕</button>
        </div>
        <nav class="topnav topnav-mobile">
          <button type="button" class="print-btn" onclick="window.print()">Imprimer les états</button>
          <a href="{{ path('guides_index') }}">Didacticiels</a>
          <a href="{{ path('home') }}">Accueil</a>
          {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('admin_dashboard') }}">Admin</a>
              <a href="{{ path('admin_compteurs_reference') }}">Réf. compteurs</a>
              <a href="{{ path('admin_historique') }}">Historique global</a>
            {% else %}
              <a href="{{ path('copro_dashboard') }}">Mes lots</a>
              <a href="{{ path('copro_historique') }}">Historique</a>
            {% endif %}
            <a href="{{ path('app_account_email') }}">Mon compte</a>
            <a class="cta" href="{{ path('app_logout') }}">Déconnexion</a>
          {% else %}
            <a class="cta" href="{{ path('app_login') }}">Connexion</a>
          {% endif %}
        </nav>
      </aside>
      <main class="page">
        {% block body %}{% endblock %}
      </main>
      <footer class="footer">
        <span>Gestion des compteurs d’eau — copropriété</span>
      </footer>
    </div>
    <script>
      (function () {
        var body = document.body;
        var menuButton = document.getElementById('mobileMenuButton');
        var menuPanel = document.getElementById('mobileMenuPanel');
        var menuOverlay = document.getElementById('mobileMenuOverlay');
        var menuClose = document.getElementById('mobileMenuClose');
        var desktopNav = document.querySelector('.desktop-nav');

        if (!menuButton || !menuPanel || !menuOverlay) {
          return;
        }

        function isMobile() {
          return window.matchMedia('(max-width: 991.98px)').matches;
        }

        function openMenu() {
          if (!isMobile()) {
            return;
          }
          menuPanel.hidden = false;
          menuOverlay.hidden = false;
          menuButton.setAttribute('aria-expanded', 'true');
          body.classList.add('menu-open');
        }

        function closeMenu() {
          menuPanel.hidden = true;
          menuOverlay.hidden = true;
          menuButton.setAttribute('aria-expanded', 'false');
          body.classList.remove('menu-open');
        }

        function syncByViewport() {
          if (isMobile()) {
            menuButton.hidden = false;
            if (desktopNav) {
              desktopNav.style.display = 'none';
            }
            closeMenu();
          } else {
            menuButton.hidden = true;
            if (desktopNav) {
              desktopNav.style.display = 'flex';
            }
            closeMenu();
          }
        }

        menuButton.addEventListener('click', function () {
          if (menuPanel.hidden) {
            openMenu();
          } else {
            closeMenu();
          }
        }
        );
        menuClose && menuClose.addEventListener('click', closeMenu);
        menuOverlay.addEventListener('click', closeMenu);

        menuPanel.querySelectorAll('a, button.print-btn').forEach(function (el) {
          el.addEventListener('click', closeMenu);
        });

        document.addEventListener('DOMContentLoaded', syncByViewport);
        document.addEventListener('turbo:load', syncByViewport);
        document.addEventListener('turbo:before-cache', closeMenu);
        window.addEventListener('resize', syncByViewport);

        syncByViewport();
      })();
    </script>
  </body>
</html>
