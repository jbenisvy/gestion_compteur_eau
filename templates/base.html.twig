{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    {# ✅ Un seul bloc stylesheets #}
    {% block stylesheets %}
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
      >
      <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    {% endblock %}

    {# ✅ Un seul bloc javascripts, avec importmap si tu l’utilises #}
    {% block javascripts %}
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
        defer
      ></script>
      {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
  </head>
  <body>
    <div class="app-shell">
      <header class="topbar navbar navbar-light">
        <div class="brand">
          <span class="brand-mark">Eau</span>
          <span class="brand-sub">Gestion Copropriété</span>
        </div>
        <button
          class="navbar-toggler mobile-menu-btn"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#mobileNavigation"
          aria-controls="mobileNavigation"
          aria-label="Basculer la navigation"
        >
          <span class="hamburger-glyph" aria-hidden="true">☰</span>
          <span class="hamburger-label">Menu</span>
        </button>

        <nav class="topnav desktop-nav">
          <button type="button" class="print-btn" onclick="window.print()">Imprimer les états</button>
          <a href="{{ path('guides_index') }}">Didacticiels</a>
          <a href="{{ path('home') }}">Accueil</a>
          {% if app.user %}
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('admin_dashboard') }}">Admin</a>
              <a href="{{ path('admin_compteurs_reference') }}">Réf. compteurs</a>
              <a href="{{ path('admin_historique') }}">Historique global</a>
            {% else %}
              <a href="{{ path('copro_dashboard') }}">Mes lots</a>
              <a href="{{ path('copro_historique') }}">Historique</a>
            {% endif %}
            <a href="{{ path('app_account_email') }}">Mon compte</a>
            <a class="cta" href="{{ path('app_logout') }}">Déconnexion</a>
          {% else %}
            <a class="cta" href="{{ path('app_login') }}">Connexion</a>
          {% endif %}
        </nav>
      </header>

      <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileNavigation" aria-labelledby="mobileNavigationLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="mobileNavigationLabel">Menu</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Fermer"></button>
        </div>
        <div class="offcanvas-body">
          <nav class="topnav topnav-mobile">
            <button type="button" class="print-btn" onclick="window.print()" data-bs-dismiss="offcanvas">Imprimer les états</button>
            <a data-bs-dismiss="offcanvas" href="{{ path('guides_index') }}">Didacticiels</a>
            <a data-bs-dismiss="offcanvas" href="{{ path('home') }}">Accueil</a>
            {% if app.user %}
              {% if is_granted('ROLE_ADMIN') %}
                <a data-bs-dismiss="offcanvas" href="{{ path('admin_dashboard') }}">Admin</a>
                <a data-bs-dismiss="offcanvas" href="{{ path('admin_compteurs_reference') }}">Réf. compteurs</a>
                <a data-bs-dismiss="offcanvas" href="{{ path('admin_historique') }}">Historique global</a>
              {% else %}
                <a data-bs-dismiss="offcanvas" href="{{ path('copro_dashboard') }}">Mes lots</a>
                <a data-bs-dismiss="offcanvas" href="{{ path('copro_historique') }}">Historique</a>
              {% endif %}
              <a data-bs-dismiss="offcanvas" href="{{ path('app_account_email') }}">Mon compte</a>
              <a class="cta" data-bs-dismiss="offcanvas" href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
              <a class="cta" data-bs-dismiss="offcanvas" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
          </nav>
        </div>
      </div>
      <main class="page">
        {% block body %}{% endblock %}
      </main>
      <footer class="footer">
        <span>Gestion des compteurs d’eau — copropriété</span>
      </footer>
    </div>
    <script>
      (function () {
        function hardCloseMobileMenu() {
          var offcanvasEl = document.getElementById('mobileNavigation');
          if (!offcanvasEl) {
            return;
          }

          if (window.bootstrap && window.bootstrap.Offcanvas) {
            var instance = window.bootstrap.Offcanvas.getOrCreateInstance(offcanvasEl);
            instance.hide();
          }

          offcanvasEl.classList.remove('show');
          offcanvasEl.setAttribute('aria-hidden', 'true');
          offcanvasEl.removeAttribute('aria-modal');
          offcanvasEl.style.visibility = 'hidden';

          document.querySelectorAll('.offcanvas-backdrop').forEach(function (el) {
            el.remove();
          });

          document.body.classList.remove('offcanvas-backdrop', 'modal-open');
          document.body.style.removeProperty('overflow');
          document.body.style.removeProperty('padding-right');
        }

        function initMobileMenuLinks() {
          var offcanvasEl = document.getElementById('mobileNavigation');
          if (!offcanvasEl || offcanvasEl.dataset.linksInit === '1') {
            return;
          }
          offcanvasEl.dataset.linksInit = '1';

          offcanvasEl.querySelectorAll('a, button.print-btn').forEach(function (el) {
            el.addEventListener('click', function () {
              hardCloseMobileMenu();
            });
          });
        }

        document.addEventListener('DOMContentLoaded', function () {
          hardCloseMobileMenu();
          initMobileMenuLinks();
        });

        document.addEventListener('turbo:load', function () {
          hardCloseMobileMenu();
          initMobileMenuLinks();
        });

        document.addEventListener('turbo:before-cache', function () {
          hardCloseMobileMenu();
        });
      })();
    </script>
  </body>
</html>
