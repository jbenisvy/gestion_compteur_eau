{% extends 'base.html.twig' %}

{% block title %}Gestion des lots{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Gestion des lots</h1>
    <p class="text-muted">Page réservée aux administrateurs.</p>

    <div class="table-wrap">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom du lot</th>
                    <th>Copropriétaire</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for lot in lots %}
                    <tr>
                        <td>{{ lot.id }}</td>
                        <td>{{ lot.nom }}</td>
                        <td>{{ lot.coproprietaire is defined ? lot.coproprietaire : 'Non défini' }}</td>
                        <td class="text-center">
                            <a href="#" class="btn btn-sm btn-primary">Voir</a>
                            <a href="#" class="btn btn-sm btn-warning">Modifier</a>
                            <a href="#" class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun lot trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
