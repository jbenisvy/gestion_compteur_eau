{% extends 'base.html.twig' %}

{% block title %}Didacticiels{% endblock %}

{% block body %}
<section class="hero">
  <div>
    <h1>Didacticiels</h1>
    <p>Guides pas à pas pour utiliser l'application, avec le parcours écran par écran.</p>
  </div>
  <div class="card">
    <h3>Accès rapide</h3>
    <ul class="list">
      <li><a href="{{ path('guide_utilisateur') }}">Guide Utilisateur <span class="badge">Copropriétaire</span></a></li>
      {% if is_granted('ROLE_ADMIN') %}
        <li><a href="{{ path('guide_admin') }}">Guide Admin <span class="badge">Administration</span></a></li>
      {% else %}
        <li><a href="{{ path('app_login_admin') }}">Guide Admin (connexion requise) <span class="badge">Admin</span></a></li>
      {% endif %}
    </ul>
  </div>
</section>
{% endblock %}

