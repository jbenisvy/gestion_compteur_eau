{% extends 'base.html.twig' %}

{% block title %}Connexion administrateur{% endblock %}

{% block body %}
<div class="login-card">
    <h1>Connexion administrateur</h1>
    <p>Accès réservé à l'administration.</p>

    {% if error %}
        <div class="alert alert-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <form method="post" action="{{ path('app_login_admin') }}">
        <div class="form-row">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
        </div>

        <div class="form-row">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-primary" type="submit">Connexion admin</button>
    </form>

    <p style="margin-top: 1rem;">
        Retour espace copropriétaire:
        <a href="{{ path('app_login') }}">connexion par lien sécurisé</a>
    </p>
</div>
{% endblock %}
